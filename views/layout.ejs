<!doctype html>
<html lang="de">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>

    <header class="hero">
      <div class="container py-4 text-center">
        <h1 class="headline h2 mb-2">Diskutieren. Helfen. Verbinden.</h1>
        <p class="subline mb-0">
          Ein leichtes, schnelles Forum (In-Memory Modus)
        </p>
      </div>
    </header>

    <main class="container py-4">
      <%- include('partials/flash') %>
      <div class="content-card p-4 mb-5">
        <%- body %>
      </div>
    </main>

    <!-- Global Confirm Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmDeleteTitle">Bestätigen</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Schließen"
            ></button>
          </div>

          <div class="modal-body">
            <p id="confirmDeleteMessage" class="mb-0">
              Diese Aktion kann nicht rückgängig gemacht werden.
            </p>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Abbrechen</button>

            <button
              type="button"
              id="confirmDeleteBtn"
              class="btn btn-danger"
            >Ja, ausführen</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Insert Link Modal -->
    <div class="modal fade" id="insertLinkModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title">Link einfügen</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Schließen"
            ></button>
          </div>

          <div class="modal-body">
            <div class="mb-3">
              <label for="linkUrlInput" class="form-label">URL</label>
              <input
                type="url"
                class="form-control"
                id="linkUrlInput"
                placeholder="https://example.com"
              >
              <div class="form-text">
                Am besten komplette URL inkl. https://
              </div>
            </div>

            <div class="alert alert-info py-2 small mb-0" id="linkSelectionInfo" style="display:none;">
              Ausgewählter Text wird verlinkt.
            </div>
            <div class="alert alert-warning py-2 small mb-0" id="linkNoSelectionInfo" style="display:none;">
              Kein Text markiert. Die URL selbst wird eingefügt.
            </div>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Abbrechen</button>

            <button
              type="button"
              class="btn btn-primary"
              id="insertLinkConfirmBtn"
            >
              Link einfügen
            </button>
          </div>

        </div>
      </div>
    </div>

    <footer class="text-center text-muted small py-4">
      © <%= new Date().getFullYear() %> Forum-App (In-Memory)
    </footer>

    <!-- Scripts -->
    <script src="/bootstrap.bundle.min.js"></script>
    <script src="/app.js"></script>
    <script src="/editor.js"></script>
  </body>
</html>
