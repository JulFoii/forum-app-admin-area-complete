<div class="ticket-admin-wrapper">
  <div class="card ticket-admin-card shadow-sm border-0">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
        <div>
          <h1 class="h4 mb-1">Ticket-Übersicht</h1>
          <div class="small text-muted">Verwalte neue, laufende und abgeschlossene Support-Tickets.</div>
        </div>
        <a href="/admin/dashboard" class="btn btn-ghost-light btn-sm">
          ← Zurück zum Admin-Dashboard
        </a>
      </div>

      <div class="ticket-admin-filters mb-3">
        <ul class="nav nav-pills flex-wrap gap-1">
          <li class="nav-item">
            <a class="nav-link ticket-pill <%= (!filter || filter === 'active') ? 'active' : '' %>" href="/admin/tickets?filter=active">
              Offene &amp; in Bearbeitung
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link ticket-pill <%= filter === 'new' ? 'active' : '' %>" href="/admin/tickets?filter=new">
              Neue Tickets
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link ticket-pill <%= filter === 'in_progress' ? 'active' : '' %>" href="/admin/tickets?filter=in_progress">
              In Bearbeitung
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link ticket-pill <%= filter === 'mine' ? 'active' : '' %>" href="/admin/tickets?filter=mine">
              Meine Tickets
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link ticket-pill <%= filter === 'closed' ? 'active' : '' %>" href="/admin/tickets?filter=closed">
              Archiv (geschlossen)
            </a>
          </li>
        </ul>
      </div>

      <% if (!tickets || tickets.length === 0) { %>
        <div class="empty-state border rounded-3 p-4 text-center">
          <div class="mb-2 fw-semibold">Keine Tickets für diesen Filter</div>
          <div class="text-muted small">
            Ändere den Filter oben oder komme später wieder, wenn neue Anfragen eingegangen sind.
          </div>
        </div>
      <% } else { %>
        <div class="table-responsive ticket-admin-table-wrapper">
          <table class="table align-middle mb-0 ticket-admin-table">
            <thead>
              <tr>
                <th style="min-width: 80px;">ID</th>
                <th style="min-width: 220px;">Betreff</th>
                <th>Ersteller</th>
                <th>Status</th>
                <th>Zuordnung</th>
                <th class="text-center">Nachrichten</th>
                <th>Erstellt am</th>
                <th class="text-end">Aktionen</th>
              </tr>
            </thead>
            <tbody>
              <% tickets.forEach(t => { %>
                <tr>
                  <td class="small text-muted font-monospace">
                    <span class="ticket-id-snippet"><%= t._id %></span>
                  </td>
                  <td>
                    <div class="fw-semibold">
                      <a href="/tickets/<%= t._id %>" class="text-decoration-none ticket-title-link">
                        <%= t.title %>
                      </a>
                    </div>
                    <% if (t.category) { %>
                      <div class="small text-muted">
                        <i class="bi bi-folder2-open me-1"></i><%= t.category %>
                      </div>
                    <% } %>
                  </td>
                  <td><%= t.userName %></td>
                  <td>
                    <% if (t.status === 'open') { %>
                      <span class="badge rounded-pill bg-status-open">neu</span>
                    <% } else if (t.status === 'in_progress') { %>
                      <span class="badge rounded-pill bg-status-progress">in Bearbeitung</span>
                    <% } else if (t.status === 'closed') { %>
                      <span class="badge rounded-pill bg-status-closed">archiviert</span>
                    <% } else { %>
                      <span class="badge rounded-pill bg-secondary"><%= t.status %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (t.assignedName) { %>
                      <span class="badge bg-light text-dark border small">
                        <i class="bi bi-person-workspace me-1"></i><%= t.assignedName %>
                      </span>
                    <% } else { %>
                      <span class="text-muted small">Niemand</span>
                    <% } %>
                  </td>
                  <td class="text-center"><%= t.messageCount %></td>
                  <td class="small text-muted">
                    <%= new Date(t.created_at).toLocaleString('de-DE') %>
                  </td>
                  <td class="text-end">
                    <div class="d-flex flex-wrap justify-content-end align-items-center gap-2 ticket-row-actions">
                      <a href="/tickets/<%= t._id %>" class="btn btn-sm btn-outline-primary">
                        Öffnen
                      </a>

                      <form method="post"
                            action="/admin/tickets/<%= t._id %>/assign"
                            class="d-inline js-double-confirm"
                            data-confirm-message="Dieses Ticket übernehmen?">
                        <button type="submit"
                                class="btn btn-sm btn-outline-secondary">
                          Übernehmen
                        </button>
                      </form>

                      <form method="post"
                            action="/admin/tickets/<%= t._id %>/status"
                            class="d-inline">
                        <div class="input-group input-group-sm ticket-status-group">
                          <select name="status" class="form-select">
                            <option value="open" <%= t.status === 'open' ? 'selected' : '' %>>Neu</option>
                            <option value="in_progress" <%= t.status === 'in_progress' ? 'selected' : '' %>>In Bearbeitung</option>
                            <option value="closed" <%= t.status === 'closed' ? 'selected' : '' %>>Geschlossen</option>
                          </select>
                          <button type="submit"
                                  class="btn btn-outline-success">
                            Status speichern
                          </button>
                        </div>
                      </form>
                    </div>
                  </td>

                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>
