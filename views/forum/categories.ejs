<div class="d-flex justify-content-between align-items-center">
  <h2 class="mb-0"><i class="bi bi-grid me-2"></i>Kategorien</h2>

  <% if (currentUser?.is_admin) { %>
    <a class="btn btn-outline-secondary btn-sm" href="/admin/categories">
      <i class="bi bi-sliders"></i> Verwalten
    </a>
  <% } %>
</div>

<div class="row row-cols-1 row-cols-md-2 g-3 mt-2">
  <% categories.forEach(c => { %>
    <div class="col">
      <a
        class="card h-100 card-link-hover p-3 text-decoration-none text-reset"
        href="/c/<%= c.slug %>"
      >
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <div class="fs-5 fw-semibold text-dark"><%= c.name %></div>
            <% if (c.description) { %>
              <div class="small text-muted"><%= c.description %></div>
            <% } %>
          </div>

          <i class="bi bi-chevron-right text-muted"></i>
        </div>
      </a>
    </div>
  <% }) %>
</div>
